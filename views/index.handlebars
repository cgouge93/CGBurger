<div class="container">
    <img src="#" alt="" class="img-fluid">
    <h1 class="header">Eat the Burger</h1>

    <div class="row">
        <div class="col-4">
            <h2>To be devoured:</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-4">
            <p>Add burgers that you want to try!</p>
        </div>
        <div class="col-4">
            <h2>Devoured:</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burger-block deboured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <br>
    <form id="create-form">
        <div class="form-group" align="center">
            <label for="burger" class="burger-label">Add a burger:</label>
            <input type="text" id="burger">
            <button class="btn btn-success ml-3" type="submit">Add burger</button>
        </div>
    </form>
</div>